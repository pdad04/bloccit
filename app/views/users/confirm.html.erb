<h1>Sign Up Confirmation<br /><br /></h1>

<h3>Are you sure these values are correct?<br /><br /></h3>

<ul class="list-unstyled">
  <li class="media">
    <div class="media-body">
      <h4>Email: <%= @user.email%></h4>
    </div>
  </li>
  <li class="media">
    <div class="media-body">
      <h4>Name: <%= @user.name%></h4>
    </div>
  </li>
</ul>
<div class="row">
  <div class="col-md-1">
    <%= button_to "Yes", {controller: "users", action: "create", params: params.permit!.to_h}, class: 'btn btn-success' %>
  </div>
  <div class="col-md-1">
    <%= link_to "No",new_user_path, class: 'btn btn-danger' %>
  </div>
</div>
